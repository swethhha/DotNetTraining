@model IEnumerable<ShopTrackPro.MVC.Models.UserViewModel>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
