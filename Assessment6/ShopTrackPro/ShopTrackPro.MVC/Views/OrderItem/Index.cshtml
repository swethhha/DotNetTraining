@model IEnumerable<ShopTrackPro.MVC.Models.OrderItemViewModel>

@{
    ViewData["Title"] = "Order Items List";
}

<h2>Order Items List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <a asp-controller="OrderItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No order items found.</td>
            </tr>
        }
    </tbody>
</table>
