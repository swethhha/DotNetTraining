@model IEnumerable<EventEase.MVC.Models.UserViewModel>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>
