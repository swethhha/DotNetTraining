@model IEnumerable<HostelManagement.MVC.Models.RoomViewModel>

<h2>All Rooms</h2>
<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Capacity</th>
            <th>Occupancy</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Capacity</td>
                <td>@room.CurrentOccupancy</td>
                <td>
                    <a asp-controller="RoomView" asp-action="Details" asp-route-id="@room.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
